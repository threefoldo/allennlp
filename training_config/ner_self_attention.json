{
  "dataset_reader": {
    "type": "sequence_tagging",
    "word_tag_delimiter": "/",
    "token_indexers": {
      "tokens": {
        "type": "single_id",
        "lowercase_tokens": true
      }
    }
  },
  "train_data_path": "data/baike-half-words-iob-train.txt",
  "validation_data_path": "data/baike-half-words-iob-test.txt",
  "model": {
    "type": "crf_tagger",
    "text_field_embedder": {
      "tokens": {
        "type": "embedding",
        "embedding_dim": 100,
        "pretrained_file": "data/glove.6B.100d.txt.gz"
      }
    },
    "encoder": {
	"type": "multi_head_self_attention",
	"num_heads": 4,
	"input_dim": 100,
	"attention_dim": 400,
	"values_dim": 100,
    },
    "regularizer": [
      [
        "transitions$",
        {
          "type": "l2",
          "alpha": 0.01
        }
      ]
    ]
  },
  "iterator": {
    "type": "basic",
    "batch_size": 32
  },
  "trainer": {
    "optimizer": "adam",
    "num_epochs": 40,
    "patience": 10,
    "cuda_device": 0
  }
}
