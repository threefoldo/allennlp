{
  "dataset_reader": {
    "type": "sequence_tagging",
    "word_tag_delimiter": "/",
    "token_indexers": {
      "tokens": {
        "type": "single_id",
        "lowercase_tokens": true
      },
    }
  },
  "train_data_path": "data/ner_nrst_train.txt",
  "validation_data_path": "data/ner_nrst_dev.txt",
  "model": {
    "type": "simple_tagger",
    "text_field_embedder": {
      "tokens": {
        "type": "embedding",
          "embedding_dim": 100,
          "pretrained_file": "data/glove.6B.100d.txt.gz"
      },
    },
    "encoder": {
      "type": "lstm",
      "input_size": 100,
      "hidden_size": 100,
      "num_layers": 2,
      "dropout": 0.5,
      "bidirectional": true
    }
  },
  "iterator": {
    "type": "basic",
    "batch_size": 32
  },
  "trainer": {
    "optimizer": "adam",
    "num_epochs": 10,
    "patience": 5,
    "cuda_device": 0
  }
}
