{
  "dataset_reader": {
    "type": "sequence_tagging",
    "word_tag_delimiter": "/",
    "token_indexers": {
      "tokens": {
        "type": "single_id",
        "lowercase_tokens": true
      }
    }
  },
  "train_data_path": "data/adr_ner4_train.txt",
  "validation_data_path": "data/adr_ner4_test.txt",
  "model": {
    "type": "crf_tagger",
    "text_field_embedder": {
      "tokens": {
        "type": "embedding",
        "embedding_dim": 100,
        "pretrained_file": "data/glove.twitter.27B.100d.txt.gz"
      }
    },
    "encoder": {
      "type": "gru",
      "input_size": 100,
      "hidden_size": 200,
      "num_layers": 2,
	"dropout": 0.4,
	"bidirectional": true
    },
    "regularizer": [
      [
        "transitions$",
        {
          "type": "l2",
          "alpha": 0.02
        }
      ]
    ]
  },
  "iterator": {
    "type": "basic",
    "batch_size": 32
  },
  "trainer": {
    "optimizer": "adam",
    "num_epochs": 40,
    "patience": 10,
    "cuda_device": 0
  }
}
